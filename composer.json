{
    "name" : "fab2s/opinhelpers",
    "description" : "A collection of Simple, opinionated yet hopefully useful PHP Helper Libs",
    "type" : "library",
    "authors" : [{
        "name" : "Fabrice de Stefanis"
    }],
    "keywords" : [
        "PHP",
        "Simple",
        "Helpers",
        "Utf8",
        "String",
        "Math",
        "BOM",
        "BcMath",
        "FileLock"
    ],
    "license" : [
        "MIT"
    ],
    "require" : {
        "php": ">=7.1",
        "fab2s/math": "1.0.*",
        "fab2s/filelock": "@dev",
        "fab2s/bom": "@dev",
        "fab2s/utf8": "@dev",
        "fab2s/strings": "@dev"
    },
    "require-dev": {
      "phpunit/phpunit": "~7.0|~8.0"
    },
    "autoload": {
        "classmap": [
          "src"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "fab2s\\Tests\\": "tests/"
        }
    }
}
