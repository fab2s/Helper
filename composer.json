{
    "name" : "fab2s/opinhelpers",
    "description" : "A collection of Simple, opinionated yet hopefully useful PHP Helper Libs",
    "type" : "library",
    "authors" : [{
        "name" : "Fabrice de Stefanis"
    }],
    "keywords" : [
        "PHP",
        "Simple",
        "Helpers",
        "Utf8",
        "String",
        "Math",
        "BOM",
        "BcMath",
        "FileLock"
    ],
    "license" : [
        "MIT"
    ],
    "require" : {
        "php": ">=5.6"
    },
    "require-dev": {
      "phpunit/phpunit": "~5.0"
    },
    "autoload": {
        "classmap": [
          "src"
        ],
        "psr-4": {
            "fab2s\\OpinHelpers\\": "/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "fab2s\\Tests\\": "tests/"
        }
    },
    "suggest": {
        "ext-bcmath": "To use Math class",
        "ext-gmp": "For faster Math::baseConvert",
        "ext-intl": "To use Utf8 Normalization",
        "ext-mbstring": "To use Utf8 class"
    }
}
